{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "outDir": "./dist",
        "sourceMap": true,
        "esModuleInterop": true,
        "strict": true,
        "declaration": true,
        "noEmit": true,
        "noImplicitOverride": true,
        "skipLibCheck": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}